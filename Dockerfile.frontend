FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install

# Copy the app source (frontend lives at repo root)
COPY . .

ENV NODE_ENV=development
ENV BACKEND_URL=http://backend:4000

EXPOSE 3000

# Bind to 0.0.0.0 so it's accessible outside the container
CMD ["sh", "-c", "npm run dev -- -H 0.0.0.0"]

