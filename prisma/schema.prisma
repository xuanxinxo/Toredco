generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

model Job {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  company      String
  location     String
  type         String
  salary       String
  description  String
  requirements String[]
  benefits     String[]
  deadline     DateTime
  status       String   @default("active")
  postedDate   DateTime @default(now())
}

model NewJob {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  company      String
  location     String
  type         String
  salary       String
  description  String
  requirements String[]
  benefits     String[]
  deadline     DateTime
  status       String   @default("active")
  postedDate   DateTime @default(now())
  isTopNew     Boolean  @default(true)
}

